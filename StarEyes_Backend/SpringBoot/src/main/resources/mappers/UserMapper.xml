<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE mapper
                PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.springboot.dao.UserDao">
        <insert id="insert">
                INSERT INTO sys_user(id, password) VALUES(#{id}, #{password});
        </insert>

        <update id="update">
                UPDATE sys_user SET password = #{password} WHERE id = #{id};
        </update>

        <delete id="delete">
                DELETE FROM sys_user WHERE id = #{id};
        </delete>

        <select id="findAll" resultType="com.example.springboot.entity.User">
                SELECT * FROM sys_user;
        </select>

        <select id="getByID" resultType="com.example.springboot.entity.User">
                SELECT * FROM sys_user WHERE id = #{id};
        </select>

        <select id="checkByID" resultType="com.example.springboot.entity.User">
                SELECT * FROM sys_user WHERE id = #{id} AND password = #{password};
        </select>
</mapper>